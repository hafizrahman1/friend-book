<%= link_to :back do %>
  <i class="ion-android-arrow-back"></i> Back
<% end %>

<div class="container">
  <div class="row"
    <aside class="col-md-4"">
      <section class="user_info">
        <h1>
          <%= image_tag @user.gravatar_url default: "identicon" %>
          <%= @user.name %>
        </h1>
      </section>
    </aside>  
  </div>
</div>

<% if current_user == @user %>
<h2>Welcome back, <%= @user.name %> | <%= @user.email %></h2><br>
  <%= link_to "Create Post", new_user_post_path(@user), class: "btn btn-primary" %>
  <%= link_to "My Posts", user_posts_path(@user), class: "btn btn-primary" %>
  <%= link_to "My Friends", friendships_path, class: "btn btn-primary" %>
<% else %>
  <h2><%= @user.name %> | <%= @user.email %></h2><br>
  <%= link_to "View Posts", user_posts_path(@user), class: "btn btn-primary" %>
<% end %>
