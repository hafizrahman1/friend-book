<%= link_to :back do %>
  <i class="ion-android-arrow-back"></i> Back
<% end %>
<h2>Welcome back, <%= @user.name %> | <%= @user.email %></h2>
<div class="container">
  <div class="row"
    <aside class="col-md-4"">
      <section class="user_info">
        <h1>
          <%= image_tag @user.gravatar_url default: "identicon" %>
          <%= @user.name %>
        </h1>
      </section>
    </aside>  
  </div>
</div>

<%= link_to "View all posts", user_posts_path(@user), class: "btn btn-primary" %>
