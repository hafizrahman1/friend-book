<h1>Welcome to the FriendBook!</h1>
<h2><%= current_user.name %> | <%= current_user.email %></h2><br>
<!-- render the post_form -->
<%= render 'posts/post_form' %><br><br>

<!--create table for the user list -->
<table class="table user-list">
    <thead>
       <tr>
         <th><span>User</span></th>
         <th><span>Friends</span></th>
         <th class="text-center"><span>Status</span></th>
      </tr>
    </thead>
    <tbody>
      <!--render the user list using user partial-->
      <%= render @users || "There are no friends!" %>
    </tbody>
</table>
